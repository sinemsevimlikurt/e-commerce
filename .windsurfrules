# .winsurfrules

# Project Structure Rules
structure:
  src:
    required: true
    contents:
      - components
      - layout
      - Pages
      - services
      - store
      - assets

# Component Naming Rules
naming:
  components:
    pattern: "^[A-Z][a-zA-Z]*$"
    description: "Component names must be PascalCase"
  pages:
    pattern: "^[A-Z][a-zA-Z]*Page$"
    description: "Page components must end with 'Page' and be PascalCase"
  layout:
    pattern: "^[A-Z][a-zA-Z]*$"
    description: "Layout components must be PascalCase"

# File Extension Rules
extensions:
  allowed:
    - .jsx
    - .js
    - .css
    - .scss
    - .json

# Routing Rules
routing:
  shop:
    pattern: "/shop/:gender/:categoryName/:categoryId"
    required_params:
      - gender
      - categoryName
      - categoryId
  product:
    pattern: "/shop/:category/:subcategory/:productId"
    required_params:
      - category
      - subcategory
      - productId

# State Management Rules
redux:
  slices:
    required:
      - auth
      - product
      - cart
  actions:
    naming: "^[a-z]+[A-Z][a-zA-Z]*$"
    description: "Action names must be camelCase"

# API Integration Rules
api:
  baseURL: "https://workintech-fe-ecommerce.onrender.com"
  endpoints:
    auth:
      - /auth/login
      - /auth/verify
      - /auth/register
    products:
      - /products
      - /products/:id
      - /products/search
    categories:
      - /categories
      - /categories/:id
      - /categories/:id/products

# Component Rules
components:
  ProductCard:
    required_props:
      - product
    url_format: "/shop/:category/:subcategory/:id"
  
  ShopPage:
    required_features:
      - filtering
      - sorting
      - pagination
    url_params:
      - category
      - filter
      - sort

# Authentication Rules
auth:
  token:
    storage: "localStorage"
    key: "token"
  routes:
    protected:
      - /profile
      - /checkout
      - /orders

# Error Handling Rules
errors:
  required_handlers:
    - API_ERROR
    - AUTH_ERROR
    - VALIDATION_ERROR

# Form Validation Rules
validation:
  required_fields:
    login:
      - email
      - password
    register:
      - email
      - password
      - name
    checkout:
      - address
      - payment_method

# Code Style Rules
style:
  indent: 2
  quotes: "single"
  max_line_length: 100
  component_structure:
    order:
      - imports
      - component_definition
      - hooks
      - handlers
      - effects
      - render

# Testing Rules
testing:
  required_coverage: 80
  required_tests:
    components:
      - ProductCard
      - ShopPage
      - Header
    slices:
      - authSlice
      - productSlice

# Documentation Rules
documentation:
  required:
    - README.md
    - API.md
    - CONTRIBUTING.md
  components:
    required_sections:
      - Props
      - Usage
      - Examples

# Performance Rules
performance:
  image_formats:
    allowed:
      - .webp
      - .jpg
      - .png
  lazy_loading:
    required_for:
      - images
      - routes

# Accessibility Rules
accessibility:
  required:
    - aria-labels
    - alt-texts
    - keyboard_navigation
    - color_contrast

# Security Rules
security:
  required:
    - XSS_prevention
    - CSRF_protection
    - secure_headers
  forbidden:
    - inline_scripts
    - eval
    - localStorage_sensitive_data

# Environment Rules
env:
  required_variables:
    - REACT_APP_API_URL
    - REACT_APP_ENV
  production:
    sourcemaps: false
    console_logs: false

# Git Rules
git:
  branch_naming:
    pattern: "^(feature|bugfix|hotfix)/[a-z0-9-]+$"
  commit_message:
    pattern: "^(feat|fix|docs|style|refactor|test|chore): .+$"

# Dependencies Rules
dependencies:
  required:
    - react
    - react-dom
    - react-router-dom
    - redux
    - axios
  forbidden:
    - jquery
    - moment